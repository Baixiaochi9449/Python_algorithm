class Solution {
public:
    vector<int> nextGreaterElements(vector<int>& nums) {
        //我的想法是，先正常找一遍下一个更大元素。 然后再找那些==-1的
        int n=nums.size();
        vector<int> ans(n);
        stack<int> sta;
        for(int i=n-1;i>=0;i--){
            while(!sta.empty() && sta.top()<=nums[i]){
                sta.pop();
            }
            if(sta.empty()) ans[i]=-1;
            else ans[i]=sta.top();
            sta.push(nums[i]);
        }
        for(int i=0;i<n;i++){
            if(ans[i]==-1){
                for(int j=0;j<i;j++){
                    if(nums[j]>nums[i]){
                        ans[i]=nums[j];
                        break;
                    }
                }
            }
        }
        return ans;
    }
};
